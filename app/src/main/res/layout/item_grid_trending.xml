<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="130.0dip"
    android:layout_height="wrap_content"
    android:layout_margin="8.0dip"
    android:backgroundTint="#CD41E4"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="8.0dip">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card"
        android:layout_width="fill_parent"
        android:layout_height="170.0dip"
        android:foregroundGravity="center"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgThumb"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/song_not_found"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#801E1E1E"
            android:fontFamily="@font/san_bold"
            android:gravity="center"
            android:maxLines="2"
            android:text="title"
            android:textColor="@color/white"
            android:textSize="14.0sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_duration" />

        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#801E1E1E"
            android:fontFamily="@font/san_thin"
            android:gravity="center"
            android:maxLines="1"
            android:text="ssss"
            android:textColor="@color/white"
            android:textSize="12.0sp"
            app:layout_constraintBottom_toBottomOf="@+id/imgThumb" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
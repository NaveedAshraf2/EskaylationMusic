        <include
            layout="@layout/content_player"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.drawerlayout.widget.DrawerLayout>